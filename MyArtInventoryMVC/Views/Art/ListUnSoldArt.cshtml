@model IEnumerable<MyArt.Model.ArtListItem>

@{
    ViewBag.Title = "Un-Sold Art";
}

<br />
<div class="visible-lg visible-md visible-sm">

    <img src="~/Content/asset/Jumbo2.jpg" style="width:1150px; height:120px;" />
</div>
<div class="row">
    <div class="col-sm-3">
        <br />
        <p>
            <a href="@Url.Action( "Index", "Art")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">BACK</a>
            <a href="@Url.Action( "Create", "Art")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">ADD ART</a>
            <a href="@Url.Action( "Index", "Sale")" class="btn btn-sm" style="background-color:crimson !important; color: white !important;">SOLD</a>
        </p>
    </div>
    <div class="col-sm-8">
        <h1 style="color: crimson;
        text-shadow: 2px 2px 2px black;
        font-family: 'Bangers', cursive;
        font-size:80px;
        font-weight:300;">
            AVALIABLE ART
        </h1>
    </div>
</div>


<table class="table table-bordered table-hover visible-lg visible-md visible-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>
        <th>
            <p>Details</p>
        </th>
        <th>
            <p>Add Story</p>
        </th>
        <th>
            <p>Edit</p>
        </th>
        <th>
            <p>Sell</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/Art/RetrieveImage/@item.ArtID" class="thumbnail" height=100 width=100 />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td>
                <a href="@Url.Action( "Details", "Art", new { id = item.ArtID })" class="btn btn-xs" style=" background-color:crimson !important; color: white !important;">DETAILS</a>
            </td>
            <td>
                <a href="@Url.Action( "StoryEdit", "Art", new { id = item.ArtID })" class="btn btn-xs" style=" background-color:crimson !important; color: white !important;">ADD STORY</a>
            </td>
            <td>
                <a href="@Url.Action( "Edit", "Art", new { id = item.ArtID })" class="btn btn-xs" style=" background-color:crimson !important; color: white !important;">EDIT</a>
            </td>
            <td>
                @if (item.Sold == false)
                {

                    <a href="@Url.Action( "Create", "Sale", new { id = item.ArtID })" class="btn btn-xs" style=" background-color:crimson !important; color: white !important;">SELL</a>
                }
            </td>
        </tr>
    }

</table>
