@model IEnumerable<MyArt.Model.ArtListItem>

@{
    ViewBag.Title = "Un-Sold Art";
}

<br />
<div></div>
<img src="~/Content/asset/Jumbo2.jpg" style="width:1150px; height:120px;" />
<div class="row">
    <div class="col-sm-3">
        <br />
        <p>
            <a href="@Url.Action( "Index", "Art")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">ART</a>
            <a href="@Url.Action( "Create", "Art")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">ADD ART</a>
            <a href="@Url.Action( "Index", "Sale")" class="btn btn-sm" style="background-color:crimson !important; color: white !important;">SOLD</a>
        </p>
    </div>
    <div class="col-sm-8">
        <h1 style="color: crimson;
        text-shadow: 2px 2px 2px black;
        font-family: 'Bangers', cursive;
        font-size:100px;
        font-weight:300;">
            AVALIABLE ART
        </h1>
    </div>
</div>
  

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td>


                <a href="@Url.Action( "Details", "Art", new { id = item.ArtID })" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">DETAILS</a>
                <a href="@Url.Action( "StoryEdit", "Art", new { id = item.ArtID })" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">ADD STORY</a>
                <a href="@Url.Action( "Edit", "Art", new { id = item.ArtID })" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">EDIT</a>
                @if (item.Sold == false)
                {

                    <a href="@Url.Action( "Create", "Sale", new { id = item.ArtID })" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">SELL</a>
                }

            </td>
        </tr>
    }

</table>
