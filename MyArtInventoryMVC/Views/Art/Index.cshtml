<h2> ART INVENTORY</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

    
            <tr>

                <td>
                    <img src="/Art/RetrieveImage/@item.ArtID" alt="" height=100 width=200 />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ArtID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfCreation)
                </td>
                <th>
                    @Html.DisplayFor(model => item.Sold)
                </th>


                <td>

                    @*{
            @Html.ActionLink("SELL", "Create", "Sale", null)

            }*@
                    @Html.ActionLink("Details", "Details", new { id = item.ArtID }) |
                    @Html.ActionLink("Add Story", "StoryEdit", new { id = item.ArtID })|
                    @Html.ActionLink("Edit", "Edit", new { id = item.ArtID }) |

                    @if (item.Sold == false)
                    {
                        @Html.ActionLink("SELL", "Create", "Sale", null, new { @class = "btn btn-warning btn-sm" })

                    }

                    @*  @Html.ActionLink("Delete", "Delete", new { id = item.ArtID })*@
                    @* @Html.ActionLink($"{item.ArtID}", "Create", "Sale", new { id = item.ArtID }, null)*@


                </td>
            </tr>
            }

        </table>
