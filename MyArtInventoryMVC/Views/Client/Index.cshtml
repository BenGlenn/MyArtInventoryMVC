@model IEnumerable<MyArt.Model.ClientListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="jumbotronArt">


    <div class="container text-center">
        <br />
        <br />
        <br />
        <br />
        <div>
            @Html.ActionLink("ADD CLIENT", "Create", "Client", null, new { @class = "btn btn-warning btn-lg btn-huge" })
            @Html.ActionLink("ART", "Index", "Art", null, new { @class = "btn btn-warning btn-lg btn-huge" })
            @Html.ActionLink("SELL", "Create", "Sale", null, new { @class = "btn btn-warning btn-lg btn-huge" })
        </div>
    </div>
</div>


<h2> CLIENT LIST </h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collector)
        </th>
     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ClientID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Collector)
    </td>
    <td>
      
        @Html.ActionLink("Details", "Details", new { id = item.ClientID }) 
       
    </td>
</tr>
    }

</table>
