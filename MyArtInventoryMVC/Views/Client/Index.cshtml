@model IEnumerable<MyArt.Model.ClientListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="jumbotronArt">
</div>
<div>
  
    <br />
    <div>
        <p>
            <a href="@Url.Action( "Create", "Client")" class="btn btn-sm" style="background-color:crimson !important; color: white !important;">ADD CLIENT</a>
            <a href="@Url.Action( "Index", "Sale")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">ART</a>
            <a href="@Url.Action( "Create", "Sale")" class="btn btn-sm" style=" background-color:crimson !important; color: white !important;">SELL</a>
        </p>
    </div>
</div>
<div>
<h2 class="text-center"> CLIENT LIST </h2>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collector)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collector)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ClientID })

            </td>
        </tr>
    }

</table>
